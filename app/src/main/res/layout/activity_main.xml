<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tiketpeswat"
       android:text="Tiket Pesawat"
       android:textSize="23dp"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="20dp"
       android:layout_centerHorizontal="true"
       android:fontFamily="@font/poppins_bold"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_below="@id/tiketpeswat"
       android:paddingLeft="30dp"
       android:id="@+id/baris1">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Dari :"
         android:fontFamily="@font/poppins_regular"
         android:textSize="16dp"/>

      <Spinner
         android:id="@+id/spinnerberangkat"
          android:layout_width="350dp"
          android:layout_height="wrap_content"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ke :"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/poppins_regular"
          android:textSize="16dp"/>

      <Spinner
          android:id="@+id/spinnertujuan"
          android:layout_width="350dp"
          android:layout_height="wrap_content"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tanggal dan Waktu Keberangkatan"
          android:layout_marginLeft="40dp"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/poppins_regular"
          android:textSize="16dp"/>

      <DatePicker
          android:id="@+id/datePicker"
          android:layout_width="350dp"
          android:layout_height="200dp"
          android:calendarViewShown="false"
          android:layout_marginBottom="20dp"
          android:datePickerMode="calendar" />

      <TimePicker
          android:id="@+id/timePicker"
          android:layout_width="350dp"
          android:layout_height="150dp"
          android:layout_marginBottom="20dp"
          android:timePickerMode="spinner" />
   <Button
       android:id="@+id/pesan"
       android:layout_width="300dp"
       android:layout_height="50dp"
      android:layout_marginLeft="30dp"
      android:text="Pesan"/>





   </LinearLayout>

   




</RelativeLayout>